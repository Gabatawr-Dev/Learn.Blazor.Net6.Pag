@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @_currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Plus</button>
<button class="btn btn-primary" @onclick="DecrementCount">Minus</button>

@code {
    private int _currentCount;

    private void IncrementCount() => _currentCount++;
    private void DecrementCount() => _currentCount--;
}
