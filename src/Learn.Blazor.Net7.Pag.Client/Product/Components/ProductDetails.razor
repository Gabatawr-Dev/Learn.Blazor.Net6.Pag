@if (Model is null)
{
    <p>Loading...</p>
}
else
{
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img class="img-fluid rounded-start" src="@Model.ImageUrl" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title card-link">
                        @Model.Title
                    </h5>
                    <p class="card-text">@Model.Description</p>
                    <h5 class="card-subtitle">$@Model.Price</h5>
                </div>
            </div>
        </div>
    </div>
}
